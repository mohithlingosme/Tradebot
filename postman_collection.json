{
  "info": {
    "name": "Market Data Ingestion API",
    "description": "API collection for testing market data ingestion endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Readiness Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/ready",
          "host": ["{{base_url}}"],
          "path": ["ready"]
        }
      }
    },
    {
      "name": "Get Candles",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/candles?symbol=RELIANCE.NS&interval=1m&limit=50",
          "host": ["{{base_url}}"],
          "path": ["candles"],
          "query": [
            {
              "key": "symbol",
              "value": "RELIANCE.NS",
              "description": "Stock symbol (e.g., RELIANCE.NS, AAPL)"
            },
            {
              "key": "interval",
              "value": "1m",
              "description": "Time interval (e.g., 1m, 1h, 1d)"
            },
            {
              "key": "limit",
              "value": "50",
              "description": "Number of candles to return (max 1000)"
            }
          ]
        }
      }
    },
    {
      "name": "Get Symbols",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/symbols",
          "host": ["{{base_url}}"],
          "path": ["symbols"]
        }
      }
    },
    {
      "name": "Get Metrics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/metrics",
          "host": ["{{base_url}}"],
          "path": ["metrics"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8001",
      "type": "string"
    }
  ]
}
