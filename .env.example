# ===============================
# Finbot example environment file
# ===============================
# Copy this file to `.env` (or `.env.dev`) and replace placeholder values
# before running any services. Never commit real credentials.

# --- Core application context ---
APP_ENV=development
APP_NAME=Finbot Trading API
APP_PORT=8000
APP_HOST=0.0.0.0
ALLOW_ORIGINS=http://localhost:8501,http://localhost:5173,http://localhost:3000

# Mode controls (guard live trading behind explicit confirmation).
FINBOT_MODE=dev        # dev | paper | live
FINBOT_LIVE_TRADING_CONFIRM=false
APP_USE_CASE=PERSONAL_EXPERIMENTAL

# --- Authentication / JWT ---
JWT_SECRET_KEY=dev-secret-change-me
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=adminpass
DEFAULT_USER_USERNAME=user
DEFAULT_USER_PASSWORD=userpass
DEFAULT_TRADER_USERNAME=trader
DEFAULT_TRADER_PASSWORD=trader123

# --- Database / cache ---
DATABASE_URL=sqlite:///./market_data.db
MARKET_DATA_DATABASE_URL=sqlite:///./market_data.db
REDIS_URL=redis://localhost:6379/0

# --- Logging / telemetry ---
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILENAME=finbot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
ENFORCE_HTTPS=false
SENTRY_DSN=

# --- Trading engine defaults ---
TRADING_MODE=paper
UPDATE_INTERVAL_SECONDS=5
DEFAULT_SYMBOLS=AAPL,GOOGL,MSFT
MAX_DRAWDOWN=0.15
MAX_DAILY_LOSS=0.05
MAX_POSITION_SIZE=0.1
INITIAL_CASH=100000

# MVP paper loop overrides
MVP_MAX_DAILY_LOSS=10000
MVP_MAX_POSITION_SIZE=200
MVP_MAX_POSITIONS=2

# --- Market data ingestion / scheduler ---
MARKET_DATA_CONFIG_PATH=market_data_ingestion/config/config.example.yaml
MARKET_DATA_HEALTH_PORT=8080
MARKET_DATA_METRICS_PORT=9090
MARKET_DATA_SCHEDULER_RUN_TIME=02:00
MARKET_DATA_SCHEDULER_TIMEZONE=UTC
MARKET_DATA_SCHEDULER_ENABLED=true
ENABLE_PROMETHEUS_METRICS=true

# --- External API keys (replace with real secrets) ---
ALPHAVANTAGE_API_KEY=demo
FYERS_API_KEY=
FYERS_ACCESS_TOKEN=
POLYGON_API_KEY=
BINANCE_API_KEY=
KITE_API_KEY=
KITE_API_SECRET=
KITE_ACCESS_TOKEN=
OPENAI_API_KEY=
OPENAI_FINETUNED_MODEL=

# --- AI / legal guardrails ---
FINBOT_FINANCIAL_DISCLAIMER=This AI output is for research only. Not investment advice.

# --- Frontend (Vite/Tauri) ---
VITE_API_BASE_URL=http://localhost:8000
VITE_API_PREFIX=/api
VITE_WS_URL=ws://localhost:8000/ws

# --- Backend -> ingestion linking ---
MARKET_DATA_DB_PATH=market_data.db
ALPHAVANTAGE_HEALTH_URL=https://www.alphavantage.co

# --- Optional services ---
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
PII_FERNET_KEY=

# Keep mode pinned to dev/paper unless you have reviewed
# docs/legal_safety_notes.md and obtained compliance approval.
