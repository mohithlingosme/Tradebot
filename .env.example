# Finbot Trading AI System Environment Variables
# Copy this file to .env and fill in the actual values

# Broker Configuration
# Options: PAPER, ZERODHA, FYERS, ANGELONE
BROKER_TYPE=PAPER

# Zerodha Broker Credentials (if using ZERODHA)
ZERODHA_API_KEY=your_zerodha_api_key
ZERODHA_API_SECRET=your_zerodha_api_secret
ZERODHA_ACCESS_TOKEN=your_zerodha_access_token
ZERODHA_PUBLIC_TOKEN=your_zerodha_public_token

# Fyers Broker Credentials (if using FYERS)
FYERS_APP_ID=your_fyers_app_id
FYERS_APP_SECRET=your_fyers_app_secret
FYERS_ACCESS_TOKEN=your_fyers_access_token

# AngelOne Broker Credentials (if using ANGELONE)
ANGELONE_API_KEY=your_angelone_api_key
ANGELONE_API_SECRET=your_angelone_api_secret
ANGELONE_ACCESS_TOKEN=your_angelone_access_token

# Market Data Configuration
# Options: MOCK, REAL
MARKET_DATA_SOURCE=MOCK

# NSE API Key (if using real NSE data)
NSE_API_KEY=your_nse_api_key

# Fyers WebSocket URL (if using FYERS for live data)
FYERS_WEBSOCKET_URL=wss://websocket.fyers.in

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/finbot_db

# Redis Configuration (for caching and live data storage)
REDIS_URL=redis://localhost:6379

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
# Add other AI service keys as needed

# Logging Configuration
LOG_LEVEL=INFO

# Backend API Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Security Configuration
SECRET_KEY=your_secret_key_for_jwt
JWT_SECRET_KEY=your_jwt_secret_key

# Payment Gateway (if integrating payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Monitoring and Error Logging
SENTRY_DSN=your_sentry_dsn

# Deployment Configuration
ENVIRONMENT=development  # development, staging, production
