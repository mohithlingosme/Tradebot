# Copy this file to `.env` and update the placeholders before running Finbot.
# Never commit your real secrets to version control.

# FINBOT_MODE can be dev, paper, or live. Live requires FINBOT_LIVE_TRADING_CONFIRM=true.
FINBOT_MODE=dev
FINBOT_LIVE_TRADING_CONFIRM=false

# ── Core ────────────────────────────────────────────────────────────────
APP_ENV=development
APP_NAME=Finbot Trading API
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# ── Database ───────────────────────────────────────────────────────────
DATABASE_URL=postgresql://finbot_user:finbot_password@localhost:5432/finbot
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=finbot
DATABASE_USER=finbot_user
DATABASE_PASSWORD=finbot_password

# ── Caching & Sessions ──────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=60
JWT_SECRET_KEY=replace-with-a-secure-secret
JWT_ALGORITHM=HS256

# ── Logging & Observability ─────────────────────────────────────────────
SENTRY_DSN=
HEALTH_CHECK_INTERVAL=30
METRICS_RETENTION_DAYS=30
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090

# ── Trading Defaults ───────────────────────────────────────────────────
TRADING_MODE=simulation
UPDATE_INTERVAL_SECONDS=5.0
DEFAULT_SYMBOLS=AAPL,GOOGL,MSFT
MAX_DRAWDOWN=0.15
MAX_DAILY_LOSS=0.05
MAX_POSITION_SIZE=0.1
INITIAL_CASH=100000

# ── Market Data Ingestion ──────────────────────────────────────────────
MARKET_DATA_DATABASE_URL=sqlite:///market_data.db
MARKET_DATA_CONFIG_PATH=market_data_ingestion/config/config.example.yaml
MARKET_DATA_HEALTH_PORT=8080
MARKET_DATA_METRICS_PORT=9090
MARKET_DATA_SCHEDULER_RUN_TIME=02:00
MARKET_DATA_SCHEDULER_TIMEZONE=UTC
MARKET_DATA_SCHEDULER_PERIOD=7d
MARKET_DATA_SCHEDULER_INTERVAL=1h
MARKET_DATA_SCHEDULER_SYMBOLS=AAPL,RELIANCE.NS
MARKET_DATA_SCHEDULER_ENABLED=true

# ── Providers & External APIs ───────────────────────────────────────────
YFINANCE_ENABLED=true
ALPHAVANTAGE_API_KEY=your_alpha_vantage_key_here
ALPHAVANTAGE_BASE_URL=https://www.alphavantage.co
KITE_API_KEY=your_kite_api_key_here
KITE_API_SECRET=your_kite_api_secret_here
KITE_WS_URL=ws://localhost:8765

# ── Broker / Trading APIs ──────────────────────────────────────────────
BROKER_API_KEY=your_broker_key_here
BROKER_API_SECRET=your_broker_secret_here
BROKER_BASE_URL=https://api.yourbroker.com

# ── Frontend / Client ───────────────────────────────────────────────────
VITE_API_BASE_URL=http://localhost:8000
